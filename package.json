{
  "name": "root",
  "private": true,
  "scripts": {
    "build:all": "yarn workspaces foreach -pt run build",
    "lint:all": "yarn workspaces foreach -p run lint",
    "lint:all:fix": "yarn workspaces foreach -p run lint:fix",
    "test:all": "yarn workspaces foreach -p run test",
    "typecheck:all": "yarn workspaces foreach -p run typecheck",
    "lerna:version": "lerna version --no-commit-hooks --no-changelog",
    "lerna:publish": "lerna publish from-package",
    "preversion": "yarn run lint:all && yarn run test:all && yarn run build:all"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@3.5.0",
  "devDependencies": {
    "lerna": "^6.6.1"
  }
}
